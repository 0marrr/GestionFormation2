<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="740.0" prefWidth="1070.0" style="-fx-background-color: White;" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.forumhub.controller.CoursController">
    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <HBox alignment="CENTER_LEFT" spacing="30">
            <VBox spacing="10">
                <Label style="-fx-text-fill: #2D3436; -fx-font-size: 28px; -fx-font-weight: bold;" text="Gestion des cours" />
                <Label style="-fx-text-fill: #636E72; -fx-font-size: 14px;" text="GÃ©rez vos cours efficacement" />
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="30.0" HBox.hgrow="ALWAYS">
                <VBox alignment="CENTER" spacing="5">
                    <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#handleFormationClick">
                        <image>
                            <Image url="@../../../image/form.png" />
                        </image>
                    </ImageView>
                    <Label text="Formation" style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" />
                </VBox>
                <VBox alignment="CENTER" spacing="5">
                    <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#handleCoursClick">
                        <image>
                            <Image url="@../../../image/book.png" />
                        </image>
                    </ImageView>
                    <Label text="Cours" style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" />
                </VBox>
            </HBox>
        </HBox>

        <VBox alignment="CENTER" prefHeight="136.0" spacing="15" style="-fx-background-color: #F5F7FB; -fx-background-radius: 10; -fx-padding: 25;">
            <HBox alignment="CENTER" spacing="80.0">
                <VBox spacing="5">
                    <HBox spacing="10">
                        <ImageView fx:id="titreIcon" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../image/titre.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" text="Titre:" />
                    </HBox>
                    <TextField fx:id="titreField" promptText="Enter title" styleClass="modern-input" />
                </VBox>
                <VBox spacing="5">
                    <HBox spacing="10">
                        <ImageView fx:id="descriptionIcon" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../image/description.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" text="Description:" />
                    </HBox>
                    <TextField fx:id="descriptionField" promptText="Enter description" styleClass="modern-input" />
                </VBox>
                <VBox spacing="5">
                    <HBox spacing="10">
                        <ImageView fx:id="pdfPathIcon" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../image/pdf.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" text="PDF Path:" />
                    </HBox>
                    <TextField fx:id="pdfPathField" promptText="Enter PDF path" styleClass="modern-input" />
                    <Button onAction="#handlePdfBrowse" text="Browse" />
                </VBox>
                <VBox spacing="5">
                    <HBox spacing="10">
                        <ImageView fx:id="videoPathIcon" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../image/video.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" text="Video Path:" />
                    </HBox>
                    <TextField fx:id="videoPathField" promptText="Enter video path" styleClass="modern-input" />
                </VBox>
            </HBox>

            <HBox alignment="CENTER" spacing="80.0">
                <VBox spacing="5">
                    <HBox spacing="10">
                        <ImageView fx:id="imagePathIcon" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../image/photo.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" text="Image Path:" />
                    </HBox>
                    <TextField fx:id="imagePathField" promptText="Enter image path" styleClass="modern-input" />
                    <Button onAction="#handleImageBrowse" text="Browse" />
                </VBox>
                <VBox spacing="5">
                    <HBox spacing="10">
                        <ImageView fx:id="formationIdIcon" fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../image/education.png" />
                            </image>
                        </ImageView>
                        <Label style="-fx-text-fill: #2D3436; -fx-font-weight: bold;" text="Formation:" />
                    </HBox>
                    <ComboBox fx:id="formationComboBox" promptText="Select formation" styleClass="modern-input" />
                </VBox>
            </HBox>
        </VBox>

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleAddCours" styleClass="success-button" text="Ajouter Cours" />
            <Button onAction="#handleUpdateCours" styleClass="info-button" text="Modifier Cours" />
            <Button onAction="#handleDeleteCours" styleClass="danger-button" text="Supprimer Cours" />
        </HBox>

        <TableView fx:id="coursTable" prefHeight="300" prefWidth="550">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="titreColumn" text="Titre" />
                <TableColumn fx:id="descriptionColumn" prefWidth="137.0" text="Description" />
                <TableColumn fx:id="pdfPathColumn" prefWidth="163.0" text="PDF Path" />
                <TableColumn fx:id="videoPathColumn" prefWidth="144.0" text="Video Path" />
                <TableColumn fx:id="imagePathColumn" prefWidth="193.0" text="Image Path" />
                <TableColumn fx:id="formationTitleColumn" prefWidth="252.0" text="Formation Title" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
